<%@payments.each do |payment|%>
  <%= link_to user_payment_path(user_id: current_user.id, id: payment.id) do %>
    <div class="payment">    
        <i class="fa-solid fa-plug-circle-plus fa-3x"></i>  
      <div class="payment__detail">
        <p class="payment__name" > <%= payment.name %> </p>
        <p class="payment__date" > <%= payment.created_at %> </p>
      </div>  
      <p>$70 </p>
    </div> 
  <%end%>
<%end%>